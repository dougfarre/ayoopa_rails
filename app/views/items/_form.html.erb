<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :caption %>
    <%= f.input :value %>
    <%= f.input :cost_day %>
    <%= f.input :cost_week %>
    <%= f.input :cost_month %>
    <%= f.input :condition %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
