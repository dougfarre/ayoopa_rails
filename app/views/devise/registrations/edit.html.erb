          <h4>account settings</h4>
           <hr/>
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
          <%= f.error_notification %>
          <%= display_base_errors resource %>

          <div class="row">
            <div class="span4 offset">
              <%= f.input :name, :autofocus => true %>
            </div>
            <div class="span4">
              <%= f.input :email, :required => true %>
            </div>
          </div>

          <div class="row">
            <div class="span4 offset">
              <%= f.input :phone_one, :label => "primary phone", :required => true %>
            </div>
            <div class="span4">
              <%= f.input :phone_two, :label => "secondary phone", :required => false %>
            </div>
          </div>

          <% if current_user.provider.blank? %> 
          <div class="row">
            <div class="span8">
              <%= f.input :current_password, :required => true %>
            </div>
          </div>

          <div class="row">
            <div class="span8">
              <label class="checkbox">
                <%= check_box_tag 'change_password_tag' %> change password? 
              </label>
              <br/>
            </div>
          </div>

          <div class="row change_password_row">
            <div class="span4">
              <%= f.input :password, :autocomplete => "off", :required => false %>
            </div>
            <div class="span4">
              <%= f.input :password_confirmation, :required => false %>
            </div>
          </div>
          <% end %>
          
          <div class="row">
            <div class="span4">
              <%= f.button :submit, 'Update', :class => 'btn-primary' %>
            </div>
          </div>
          <br/>
            <span>
              unhappy? 
              <u><%= link_to "cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></u>
            </span>
        <% end %>


