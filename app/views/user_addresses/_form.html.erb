<%= simple_form_for(@user_address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true, label: "title", :input_html => {:style => 'width: 445px'} %>
    
        <%= f.simple_fields_for :address do |address| %>
      <div class="form-inputs">
        <%= render :partial => 'addresses/form2', :locals => {:f => address, :view_type => 'new'} %>
      </div>
    <% end %>
  </div>
  <label class="checkbox">
      <%= f.check_box :primary %> primary address
    </label>
  <br/>

  <%= f.button :submit, value: "update address" %>
<% end %>
